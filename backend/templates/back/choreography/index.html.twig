{% extends 'base.html.twig' %}

{% block title %}Liste des chorégraphies{% endblock %}

{% block body %}
    <h1>Liste des chorégraphies</h1>
    {% include "_flash_message.html.twig" %}
      <div class="d-flex justify-content-end">
        <a href="{{ path('app_back_choreography_new') }}"><span class="badge bg-info text-dark fs-6 p-3"><i class="bi bi-plus-circle-fill"></i> Ajouter une chorégraphie</span></a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Ecole de la chorégraphie</th>
                <th>Date de création</th>
                <th>Date de modification</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for choreography in choreographies %}
            <tr>
                <td>{{ choreography.name }}</td>
                <td>{{ choreography.school.name }}</td>
                <td>{{ choreography.createdAt ? choreography.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ choreography.updatedAt ? choreography.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_back_choreography_edit', {'id': choreography.id}) }}"><button class="badge bg-info text-dark fs-6 p-3 border-0">Modifier</button></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
